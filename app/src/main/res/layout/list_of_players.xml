<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_text"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Name"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/hit_text"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="Hits"
        android:textSize="30sp"
        android:layout_toRightOf="@id/name_text"/>
    <TextView
        android:id="@+id/hr_text"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="HR"
        android:textSize="30sp"
        android:layout_toRightOf="@id/hit_text"/>
    <ListView
        android:id="@+id/player_list"
        android:layout_below="@id/name_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:entries="@array/player_names"/>
    <ListView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/hits_list"
        android:layout_below="@id/hit_text"
        android:layout_toRightOf="@id/player_list"
        android:entries="@array/hit_values"/>
    <ListView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/hr_list"
        android:layout_below="@id/hr_text"
        android:layout_toRightOf="@id/hits_list"
        android:entries="@array/homerun_values"/>

</RelativeLayout>