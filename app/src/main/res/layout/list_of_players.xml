<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    android:scrollbarSize="25sp">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="@string/name"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/pos_text"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:text="@string/pos"
                android:textSize="30sp"
                android:layout_toEndOf="@id/name_text"/>
            <TextView
                android:id="@+id/hr_text"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:text="@string/hr"
                android:textSize="30sp"
                android:layout_toEndOf="@id/pos_text"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/playerName1"
                android:textSize="24sp"
                android:layout_below="@id/name_text" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/playerName2"
                android:textSize="24sp"
                android:layout_below="@id/playerName1"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/playerName3"
                android:textSize="24sp"
                android:layout_below="@id/playerName2"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/playerName4"
                android:textSize="24sp"
                android:layout_below="@id/playerName3"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/playerName5"
                android:textSize="24sp"
                android:layout_below="@id/playerName4"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/previousButton"
                android:layout_below="@id/playerName5"
                android:text="@string/previous" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nextButton"
                android:text="@string/next"
                android:layout_below="@id/playerName5"
                android:layout_toEndOf="@id/previousButton"/>
            <!--<ListView
                android:id="@+id/player_list"
                android:layout_below="@id/name_text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/player_names"
                android:scrollbars="none"
                android:fastScrollEnabled="false"/>
            <ListView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:id="@+id/pos_list"
                android:layout_below="@id/pos_text"
                android:layout_toEndOf="@id/player_list"
                android:entries="@array/hit_values"
                android:scrollbars="none"/>
            <ListView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:id="@+id/hr_list"
                android:layout_below="@id/hr_text"
                android:layout_toEndOf="@id/pos_list"
                android:entries="@array/homerun_values"
                android:scrollbars="none"/>-->

        </RelativeLayout>
    </HorizontalScrollView>
</ScrollView>